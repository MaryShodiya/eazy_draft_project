<%- include('partials/header') -%>
<section class="h-100 bg-dark">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col">
          <div class="card card-registration my-4" style="border:1px solid green">
            <div class="row g-0">
             
              <div class="col-xl-6">
                <div class="card-body p-md-5 text-black">
                  <h3 class="mb-5 text-uppercase">EDIT EXTENSION OF CONTRACT FORM</h3>
  
        <form action="post/postEditProfile" enctype="multipart/form-data" method="POST">

                  <div class="row">
                    <div class="col-md-6 mb-4">
                      <div class="form-outline">
                        <label class="form-label" for="form3Example1m">Name of First Party </label>
                        <input type="text" id="form3Example1m" class="form-control form-control-lg" name="name" style="border: 2px solid green" />
                      </div>
                    </div>
               
                    <div class="col-md-6 mb-4">
                        <div class="form-outline">
                            <label class="form-label" for="form3Example1n1"> Full Address of First Party </label>
                          <input type="text" id="form3Example1n1" class="form-control form-control-lg" name="work" style="border:2px solid green" />
                        </div>
                      </div>

                  </div>
  
                  <div class="row">
                    <div class="col-md-6 mb-4">
                      <div class="form-outline">
                        <label class="form-label" for="form3Example1m1">Name of Second Party/Parties or Company</label>
                        <input type="text" id="form3Example1m1" class="form-control form-control-lg"  name="location" style="border:2px solid green"/>
                      </div>
                    </div>

                    <div class="col-md-6 mb-4">
                      <div class="form-outline">
                        <label class="form-label" for="form3Example1n1">Registered Address of Company or Full Address of Second Party or Parties </label>
                        <input type="text" id="form3Example1n1" class="form-control form-control-lg" name="work" style="border:2px solid green"/>
                       
                      </div>
                    </div>
                  </div>
                   
                  <div class="row">

                    <div class="flex items-center justify-center">
                        <div class="datepicker relative  mb-3 xl:w-96">
                            <label for="floatingInput">Date of Execution of Extended Contract <small> (should be the date when both parties append their signature to this agreement) </small></label>
                          <input type="date"
                            class="form-control block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none"
                            placeholder="Select a Date" />
                        </div>
                      </div>

                    <div class="flex items-center justify-center">
                        <div class="datepicker relative  mb-3 xl:w-96">
                            <label for="floatingInput">Date of Execution of Original Contract <small> (should be the date when both parties append their signature to the Original agreement preceeding this agreement) </small></label>
                          <input type="date"
                            class="form-control block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none"
                            placeholder="Select a Date" />
                        </div>
                      </div>

                   

                    <br/>
                    <div class="flex items-center justify-center">
                        <div class="datepicker relative  mb-3 xl:w-96">
                            <label for="floatingInput">Date the Original Contract is deemed Terminated  <small> (should be the date when both parties append their signature to this agreement) </small></label>
                          <input type="date"
                            class="form-control block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none"
                            placeholder="Select a Date" />
                        </div>
                      </div>
                 

                      <div class="flex justify-center">
                        <div class="mb-3 xl:w-96">
                          <select class="form-select appearance-none
                            block
                            w-full
                            px-3
                            py-1.5
                            text-base
                            font-normal
                            text-gray-700
                            bg-white bg-clip-padding bg-no-repeat
                            border border-solid border-gray-300
                            rounded
                            transition
                            ease-in-out
                            m-0
                            focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none" aria-label="Default select example">
                              <option selected>Change Terms of Original Contract?</option>
                              <option value="1">Yes</option>
                              <option value="2">No</option>
                              <option value="3">Add to Terms of Original Contract</option>
                          </select>
                        </div>
                      </div>


          <div class="form-outline mb-4">
                    <label class="form-label" for="form3Example1n1"> If Yes? Terms of Extended Agreement <small>(can be listed chronologically)</small></label>
                    <input type="text" id="form3Example9" class="form-control form-control-lg" name="hobbies" />
                 
                  </div>

                      <div class="flex items-center justify-center">
                        <div class="datepicker relative  mb-3 xl:w-96">
                            <label for="floatingInput" class="text-gray-700">Duration of Extended Contract <small> (has two dates; a start and end date)</small></label> 
                         
                            <input type="date"
                            class="form-control block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none"
                            placeholder="From" />
    
                            <input type="date"
                            class="form-control block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none"
                            placeholder="To" />
                        </div>
                      </div> <br/>

              

                 
    
                  <div class="d-flex justify-content pt-3">
                
                    <button type="submit" class="btn btn-success btn-lg ms-2">Submit</button>
                  </div>

                </form>
              </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

    <script src="js/main.js"></script>


<%- include('partials/footer') -%>